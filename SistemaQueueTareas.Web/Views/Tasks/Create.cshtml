@model SistemaQueueTareas.Data.Task

@{
    ViewBag.Title = "Crear Nueva Tarea";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Crear Nueva Tarea</h2>

            <div class="card shadow border-0 rounded-3">
                <div class="card-body p-4">
                    @using (Html.BeginForm("Create", "Tasks", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mb-3">
                            @Html.LabelFor(model => model.name, "Nombre", new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.name, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.description, "Descripción", new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.description, new { @class = "form-control", rows = "3" })
                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(model => model.id_priority, "Prioridad", new { @class = "form-label" })
                            @Html.DropDownList("id_priority", (SelectList)ViewBag.id_priority, "Selecciona una prioridad", new { @class = "form-select", required = "required" })
                            @Html.ValidationMessageFor(model => model.id_priority, "", new { @class = "text-danger" })
                        </div>

                        <div class="mt-3">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                            @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}