@model SistemaQueueTareas.IdentityData.ApplicationUser

@{
    ViewBag.Title = "Editar Perfil";
}

<h2>Editar Perfil</h2>

@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required" })
    </div>

    <div class="form-group">
        <label>Nombre de Usuario:</label>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @required = "required" })
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>

    @Html.ValidationSummary("", new { @class = "text-danger" })
}

