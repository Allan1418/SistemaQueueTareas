@{
    ViewBag.Title = "Inicio";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/css/task-app.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
}

<div class="task-app-container">
    <div class="hero-section">
        <div class="hero-content fade-in">
            <div class="icon-container">
                <div class="task-icon-wrapper">
                    <i class="fas fa-tasks task-icon"></i>
                </div>
            </div>
            <h1 class="app-title">Gestión de Tareas</h1>
            <p class="app-description">Organiza, completa y analiza tus tareas de forma eficiente</p>
            <a href="@Url.Action("Index", "Tasks")" class="cta-button">
                <span>Ir a mis tareas</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>

    <div class="features-section">
        <div class="feature-card fade-in" style="animation-delay: 0s;">
            <div class="feature-icon organize">
                <i class="fas fa-list-ul"></i>
            </div>
            <h3>Organiza</h3>
            <p>Clasifica y prioriza tus tareas para maximizar tu productividad diaria.</p>
        </div>

        <div class="feature-card fade-in" style="animation-delay: 0.2s;">
            <div class="feature-icon complete">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>Completa</h3>
            <p>Marca tus tareas como completadas y visualiza tu progreso en tiempo real.</p>
        </div>

        <div class="feature-card fade-in" style="animation-delay: 0.4s;">
            <div class="feature-icon analyze">
                <i class="fas fa-chart-line"></i>
            </div>
            <h3>Analiza</h3>
            <p>Obtén estadísticas detalladas sobre tu rendimiento y áreas de mejora.</p>
        </div>
    </div>

    <div class="tip-section fade-in" style="animation-delay: 0.6s;">
        <div class="tip-content">
            <div class="tip-icon">
                <i class="fas fa-lightbulb"></i>
            </div>
            <div class="tip-text">
                <h4>Consejo del día</h4>
                <p>Organizar tus tareas puede aumentar tu productividad hasta en un 25%. Comienza categorizando por prioridad.</p>
            </div>
        </div>
    </div>

    <div class="stats-section">
        <div class="stat-item fade-in" style="animation-delay: 0.8s;">
            <span class="stat-number">25%</span>
            <span class="stat-label">Aumento de productividad</span>
        </div>
        <div class="stat-item fade-in" style="animation-delay: 1s;">
            <span class="stat-number">15+</span>
            <span class="stat-label">Herramientas de organización</span>
        </div>
        <div class="stat-item fade-in" style="animation-delay: 1.2s;">
            <span class="stat-number">100%</span>
            <span class="stat-label">Satisfacción de usuarios</span>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add fade-in class to elements when they're in viewport
        document.addEventListener('DOMContentLoaded', function() {
            // Elements already have the fade-in class in the HTML
            // This script is just for browsers that might not support CSS animations
            setTimeout(function() {
                var elements = document.querySelectorAll('.fade-in');
                elements.forEach(function(element) {
                    element.style.opacity = '1';
                });
            }, 100);
        });
    </script>
}
