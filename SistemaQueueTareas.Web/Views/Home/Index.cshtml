@model IEnumerable<SistemaQueueTareas.Data.Task>

@{
    ViewBag.Title = "Inicio";
}

<div class="container mt-4">
    <!-- Botón para abrir modal de notificaciones -->
    <button type="button" class="btn btn-primary mb-3" data-toggle="modal" data-target="#notificationsModal">
        <i class="fas fa-bell"></i> Ver Notificaciones
    </button>

    <h2>Listado de Tareas</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Prioridad</th>
                <th>Estado</th>
                <th>Fecha Creación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.name</td>
                    <td>@task.description</td>
                    <td>@task.Priority.name</td>
                    <td>@task.State.name</td>
                    <td>@task.fecha_creacion</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal de Notificaciones -->
<div class="modal fade" id="notificationsModal" tabindex="-1" role="dialog" aria-labelledby="notificationsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="notificationsModalLabel">Notificaciones</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="userIdFilter" class="form-control" placeholder="Filtrar por ID de usuario">
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" type="button" id="btnFilterNotifications">
                            <i class="fas fa-filter"></i> Filtrar
                        </button>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        #notificationsModal .modal-body {
            max-height: 60vh;
            overflow-y: auto;
        }

        .notification-item {
            border-left: 4px solid #007bff;
            margin-bottom: 10px;
            padding: 10px;
            transition: all 0.3s ease;
        }

            .notification-item:hover {
                background-color: #f8f9fa;
                transform: translateX(5px);
            }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#notificationsModal').on('show.bs.modal', function() {
                loadNotifications();
            });

            $('#btnFilterNotifications').click(function() {
                const userId = $('#userIdFilter').val();
                loadNotifications(userId);
            });

            function loadNotifications(userId = null) {
                const url = '@Url.Action("FindUserNotifications", "Home")' + (userId ? '?idUser=' + userId : '');

                $.get(url, function(data) {
                    $('#notificationsContainer').html(data);
                }).fail(function() {
                    $('#notificationsContainer').html(
                        '<div class="alert alert-danger">Error al cargar notificaciones</div>'
                    );
                });
            }
        });
    </script>
}